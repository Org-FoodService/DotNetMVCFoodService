<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodService</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,300,1,0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shoppingCart.css">
    <link rel="stylesheet" href="~/css/loading/spinner.css" />
</head>
<body>
    <div class="spinner-overlay" id="loadingSpinner">
        <img src="~/favicon.ico" alt="Loading Favicon" />
        <div class="spinner">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <header>
        <div class="logo">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/favicon.ico" />
                <span id="serviceName"></span>
            </a>
        </div>
        <nav class="nav-bar">
            <ul>
                @* <li>
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">@_localization.GetKey("Home")</a>
                </li> *@
                <li>
                    <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">@_localization.GetKey("Menu")</a>
                </li>
                @await Component.InvokeAsync("AuthenticationStatus")
                <li>
                    <span class="material-symbols-outlined cart-button">shopping_cart</span>
                    <span class="number_cart">0</span>
                    <ul class="modal-cart">
                        <div class="emptyCartMessage">
                            <span class="material-symbols-outlined cart-button">remove_shopping_cart</span>
                            <h1>@_localization.GetKey("CART_EmptyMessage")</h1>
                        </div>
                        <div class="totalCart">
                            <div class="subTotal">
                                <h1>Subtotal - <span class="totalItems">1 Item</span></h1>
                                <span class="totalValue">R$2400</span>
                            </div>
                            <button>@_localization.GetKey("CART_CloseOrder")</button>
                        </div>
                    </ul>
                </li>
            </ul>
        </nav>
        <div class="alert_message">
            <p>@_localization.GetKey("CART_AlertMessage")</p>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FoodService - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" type="module" asp-append-version="true"></script>
    <script src="~/js/shoppingCart/index.js" type="module"></script>
    <script src="~/js/siteSettings.js" type="module"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>