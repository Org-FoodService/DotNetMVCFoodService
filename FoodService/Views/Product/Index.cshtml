@model List<FoodService.ViewModel.ProductViewModel>

<h2>Lista de Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>@_localization.Getkey("Name")</th>
            <th>@_localization.Getkey("Description")</th>
            <td>@_localization.Getkey("Type")</td>
            <td>@_localization.Getkey("Price")</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var Product in Model)
        {
            <tr>
                <td>@Product.Name</td>
                <td>@Product.Description</td>
                <td>@Product.Type</td>
                <td>@Product.Price</td>

            </tr>
        }
    </tbody>
</table>
